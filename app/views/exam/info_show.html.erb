<div class="portlet box red-pink">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-database"></i>Thông Tin Cơ Bản </div>
			<div class="tools">
				<a href="javascript:;" class="collapse" data-original-title="" title=""> <i class="fa fa-arrow-circle-up	"></i></a>
			</div>
	</div>
	<div class="portlet-body form">
			<!-- BEGIN FORM-->
			<form action="#" class="horizontal-form">
				<div class="form-body">
					<div class="form-actions right" style="background-color: white">
						<button type="button" class="btn btn btn-primary" id="update_info_base_exam" value="<%= @exam_obj.id.to_s if @exam_obj.present? %>">Cập Nhật</button>
					</div>
					<!--/row-->
					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Tên Kỳ Thi</label>
								<input type="text" id="exam_name" class="form-control" placeholder="Tên Kỳ Thi" value="<%= @exam_obj.name if @exam_obj.present? %>">
							</div>
						</div>
						<!--/span-->
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Mã Kỳ Thi</label>
								<input type="text" id="exam_code" class="form-control" placeholder="Mã Kỳ Thi" value="<%= @exam_obj.code if @exam_obj.present? %>">
							</div>
						</div>
						<!--/span-->
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Môn Thi</label>
								<select class="form-control input-sm select2-multiple select2-hidden-accessible" tabindex="-1" aria-hidden="true" id="subject_id">
									<% @list_subject.each do |lst| %>
                                        <option value="<%= lst.id.to_s  %>" <%= "selected" if lst.id.to_s == @exam_obj.subject.id.to_s if @exam_obj.present? %>><%= lst.name %></option>
                                    <% end %>
								</select>
							</div>
						</div>
						<!--/span-->
					</div>
					<!--/row-->
					<div class="row">
						
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Thời Gian Làm Bài (phút)</label>
								<input type="text" id="period_for" class="form-control" placeholder="Thời Gian Làm Bài" value="<%= @exam_obj.period_for if @exam_obj.present? %>">
							</div>
						</div>
						<!--/span-->
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Giám Thị Coi Thi</label>
								<select class="form-control input-lg select2-multiple select2-hidden-accessible" multiple="" tabindex="-1" aria-hidden="true" data-placeholder="Chọn Giám Thị" id="supervistor">

									<% @list_user.each do |lst| %>
										<option value="<%= lst[1].to_s %>" <%= "selected" if @exam_obj.supervisor.include?(lst[1].to_s) if @exam_obj.present? %>><%= lst[0] %></option>
									<% end %>
								</select>

							</div>
						</div>
						<!--/span-->
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Thông Tin Thêm</label>
								<textarea class="form-control" rows="3" placeholder="Thông Tin Thêm" id="extra_info"><%= @exam_obj.extra_info if @exam_obj.present? %></textarea>
							</div>
						</div>
						<!--/span-->
					</div>
					<!--/row-->
						
				</div>
			</form>
				<!-- END FORM-->
	</div>
</div>


<!-- begin - cấu hình đề thi -->
<div class="portlet box grey-cascade">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-paperclip"></i>Thiết Lập Đề Thi </div>
			<div class="tools">
				<a href="javascript:;" class="collapse" data-original-title="" title=""> <i class="fa fa-arrow-circle-up	"></i></a>
			</div>
	</div>
	<div class="portlet-body form">
			<!-- BEGIN FORM-->
			<div class="horizontal-form">
				<div class="form-body">
					<div class="form-actions right" style="background-color: white">
						<button class="btn btn btn-primary" value="<%= @exam_obj.id.to_s if @exam_obj.present? %>" id="create_thread_random">Tạo Đề Ngẫu Nhiên</button>
						<button class="btn btn btn-primary" id="update_config_thread" value="<%= @exam_obj.id.to_s if @exam_obj.present? %>">Cập Nhật Cấu Hình Đề Thi</button>
						<button class="btn btn btn-primary" id="remove_thread" value="<%= @exam_obj.id.to_s if @exam_obj.present? %>">Xóa Đề Thi</button>
					</div>
					<!--/row-->
					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Số Lượng Đề</label>
								<input type="text" id="thread_number" class="form-control" placeholder="Số Câu Mức Độ Trung Bình" value="<%= @exam_thread_detail_obj.threads_number if @exam_thread_detail_obj.present? %>">
							</div>
						</div>
						<!--/span-->
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Tổng Số Câu</label>
								<input type="text" id="total_question_for_thread" class="form-control" placeholder="Tổng Số Câu" value="<%= @exam_thread_detail_obj.total_question_for_thread if @exam_thread_detail_obj.present?  %>">
							</div>
						</div>
						<!--/span-->
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Số Câu Mức Độ Dễ</label>
								<input type="text" id="easy_question_number" class="form-control" placeholder="Số Câu Mức Độ Dễ" value="<%= @exam_thread_detail_obj.easy_question_number if @exam_thread_detail_obj.present? %>">
							</div>
						</div>
						<!--/span-->
					</div>
					<!--/row-->
					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Số Câu Mức Độ Trung Bình</label>
								<input type="text" id="normal_question_number" class="form-control" placeholder="Số Câu Mức Độ Trung Bình" value="<%= @exam_thread_detail_obj.normal_question_number if @exam_thread_detail_obj.present? %>">
							</div>
						</div>
						<!--/span-->
						<div class="col-md-4">
							<div class="form-group">
								<label class="control-label">Số Câu Mức Độ Khó</label>
								<input type="text" id="hard_question_number" class="form-control" placeholder="Số Câu Mức Độ Khó" value="<%= @exam_thread_detail_obj.hard_question_number if @exam_thread_detail_obj.present? %>">
							</div>
						</div>
						<!--/span-->
					</div>
					<!--/row-->
					<div class="form-actions" style="background-color: white">
						<% if @exam_obj.present?
						if @exam_obj.exam_threads.present?
						@exam_obj.exam_threads.each do |th| 
							%>
							<a class="col-lg-2 col-md-4 col-xs-12" href="/exam_thread/<%= th.id.to_s %>/exam_thread_show" target="_blank">
								<div class="mt-element-ribbon bg-grey-steel">
									<div class="ribbon ribbon-color-success uppercase">Đề: <%= th.code %></div>
									<img class="ribbon-content" src="https://cdn3.iconfinder.com/data/icons/brands-applications/512/File-512.png" alt="" width="135px">
								</div>
							</a>
						<% 
						end 
						end
						end
						%>
						
						
					</div>
					<!--/row-->
				</div>
			</div>
				<!-- END FORM-->
	</div>
</div>

<div class="portlet box yellow-casablanca">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-bell-o"></i>Danh Sách Sinh Viên
		</div>
		<div class="tools">
			<a href="javascript:;" class="collapse" data-original-title="" title=""> 
			<i class="fa fa-arrow-circle-up	"></i></a>
		</div>
	</div>
	<div class="portlet-body">
		<!-- <%= form_tag('/exam/read_student') do -%> -->
		<!-- <%= file_field_tag :file %> -->
  <!-- <div><%= submit_tag 'Save' %></div> -->
<!-- <% end -%> -->
		<div class="row">
			<div class="col-lg-7">
				<form action="/exam/read_student" method="post">
					<span class="btn green fileinput-button">
						<i class="fa fa-plus"></i>
						<span> Add files... </span>
						<input type="file" name="files" multiple=""> </span>
						<button type="submit" class="btn blue start">
							<i class="fa fa-upload"></i>
							<span> Start upload </span>
						</button>
				</form>
			</div>
		</div>
		<div class="table-scrollable">
			<table class="table table-striped table-bordered table-advance table-hover" style="table-layout:fixed">
				<thead>
					<tr>
						<th width="4%">
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                            	<input type="checkbox" id="check_group_question_bank" />
                            	<span></span>
                            </label>
                        </th>
						<th width="4%">
							STT
						</th>
						<th width="15%">
							Mã Sinh Viên
						</th>
						<th class="hidden-xs" width="20%">
							Tên Sinh Viên 
						</th>
						<th>
							Email
						</th>
						<th>
							Lớp Chuyên Ngành
						</th>
						<th width="7%">
							Mã Đề
						</th>
						<th width="7%">Bài Làm </th>
						<th width="7%">Điểm</th>
					</tr>
				</thead>
				<tbody>
					<% 
					if @exam_obj.present?
					@exam_obj.students.each do |s| 
						%>
					<tr>
						<td>
							<label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="check_question_bank" value="1" />
                                <span></span>
                            </label>
						</td>
						<td>
							
						</td>
						<td class="highlight" style="word-wrap:break-word">
							<%= s.student_code %>
						</td>
						<td class="hidden-xs" style="word-wrap:break-word"> 
							<%= s.name %>
						</td>
						<td style="word-wrap:break-word">
							<%= s.email %>
						</td>
						<td>
							<%= s.class_code %>
						</td>
						<td>
							<a href="/exam_thread/<%= s.exam_thread_id.to_s %>/exam_thread_show" target="_blank">
								<%= s.exam_thread.code %>
							</a> 						
						</td>
						<td>
							<a target="_blank" href="/exam/<%= s.id.to_s %>/task_detail"><%= "Xem" if s.tasks.present? %></a>
						</td>
						<td>
							<%= s.test_score %>
						</td>
					</tr>
					<% end
						end
					 %>
				</tbody>
			</table>

		</div>
		<div class="row">
			<div class="col-md-7 col-sm-7">
			</div>
		</div>
	</div>
</div>

