
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light portlet-fit">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-settings font-red"></i>
                    <span class="caption-subject font-red sbold uppercase">Quản Lý Môn Thi</span>
                </div>
                
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title=""> <i class="fa fa-arrow-circle-up    "></i></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Mã Môn</label>
                                <input type="text" id="subject_code" class="form-control" placeholder="Mã Môn">
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Tên Môn</label>
                                <input type="text" id="subject_name" class="form-control" placeholder="Tên Môn">
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <button id="create_subject" class="btn green"> Thêm
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                    <thead>
                        <tr>
                            <th> Mã Môn </th>
                            <th> Tên Môn </th>
                            
                            <th> Edit </th>
                            <th> Delete </th>
                        </tr>
                    </thead>
                    <tbody id='list_subject'>
                        <% unless @list_subject.blank? %>
                            <% @list_subject.each do |row| %>
                                <tr>
                                    <td> <%= row.code %> </td>
                                    <td> <%= row.name %> </td>
                                    
                                    <td>
                                        <a class="edit" href="javascript:;"> Edit </a>
                                    </td>
                                    <td>
                                        <a class="delete" id="delete_subject" href="javascript:;"> Delete </a>
                                    </td>
                                    <input type="hidden" value="<%= row.id.to_s %>">
                                </tr>
                            <% end %>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
                <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>